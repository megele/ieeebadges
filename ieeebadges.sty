%% -*- mode: LaTeX -*-
%%
%% ieeebadges.sty --- affix USENIX Artifact Evaluation badges
%%
%% Usage:
%%   \usepackage[<options>]{ieeebadges}
%% Options:
%%   available  --- affix the "Artifacts Available" badge
%%   functional --- affix the "Artifacts Functional" badge
%%   reproduced --- affix the "Results Reproduced" badge
%%
%% Example:
%%   %% Affix the indicated badges to the paper.
%%   \usepackage[available,functional]{ieeebadges}
%%
%% Revision history:
%%   1.0 (Oct 11 2020):
%%     Initial implementation for OSDI 2020 by Eric Eide <eeide@cs.utah.edu>
%%   1.1 (Oct 16 2025):
%%     ~Stealing~ adapting to IEEE Security and Privacy AE 2025, Manuel Egele <megele@bu.edu>
%%

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\NeedsTeXFormat{LaTeX2e}
\def\ieee@fileversion{1.0}
\def\ieee@filedate{2020/10/11}
\ProvidesPackage{ieeebadges}
  [\ieee@filedate\space v\ieee@fileversion\space IEEE Security \& Privacy Artifact Evaluation Badges]

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\newif\ifieee@availablebadge
\ieee@availablebadgefalse
\DeclareOption{available}{\ieee@availablebadgetrue}

\newif\ifieee@functionalbadge
\ieee@functionalbadgefalse
\DeclareOption{functional}{\ieee@functionalbadgetrue}

\newif\ifieee@reproducedbadge
\ieee@reproducedbadgefalse
\DeclareOption{reproduced}{\ieee@reproducedbadgetrue}

\DeclareOption*{%
  \PackageError{ieeebadges}{%
    unknown option: \CurrentOption}{%
    Press <return> to proceed, ignoring unknown option: \CurrentOption.}%
}

\ProcessOptions\relax

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\RequirePackage{graphicx}
\RequirePackage[absolute]{textpos}

\setlength{\TPHorizModule}{1in}
\setlength{\TPVertModule}{1in}

\AtBeginDocument{%
\begin{textblock}{7.0}(0.75,0.5)%
  \vbox to 0pt{%
    \vss%
    \noindent%
    \makebox[7in][r]{%
      \ifieee@availablebadge%
        \raisebox{-\height}{%
          \includegraphics[width=0.6in]{ieeebadges-available}}%
      \fi%
      \ifieee@functionalbadge%
        \hspace{10pt}%
        \raisebox{-\height}{%
          \includegraphics[width=0.6in]{ieeebadges-functional}}%
      \fi%
      \ifieee@reproducedbadge%
        \hspace{10pt}%
        \raisebox{-\height}{%
          \includegraphics[width=0.6in]{ieeebadges-reproduced}}%
      \fi%
    }%
    \vskip-\prevdepth}%
\end{textblock}%
}

